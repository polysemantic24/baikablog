<div class="container" id="page-content">
  <h1 class="text-to-center"><%= "Category: " + @category.name %></h1>

  <div class="digg_pagination">
    <%= will_paginate @category_articles, :container => false %>
  </div>

  <section class="sec-cntr">
    <% if logged_in? && (@user == current_user || current_user.admin?) %>
      <div class="nav-center">
        <%= link_to "Edit category", edit_category_path(@category), class: "btn btn-outline-info" %>
      </div>
    <% end %>
    <% if logged_in? && current_user.admin? %>
      <div class="nav-center">
        <%= link_to "Delete", category_path(@category), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure you want to delete the category?" } %>
      </div>
    <% end %>
  </section>

  <%= render 'article' %>

  <div class="digg_pagination mb">
    <%= will_paginate @category_articles, :container => false %>
  </div>
 </div> 